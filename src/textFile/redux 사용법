//function  reducer(í˜„ì¬ê°’, ì•¡ì…˜ê°’){
function  reducer(currentState, action){

    if(currentState === undefined) {  //ë¹ˆê°’ì´ë©´ 1ì„ ë°˜í™˜
        return {
            number : 1;
        }
    }

    //ê³¼ê±°ì˜ ê°ì²´ë¥¼ ë³µì œ
    // ã„´(ë¶ˆë³€ì„± ìœ ì§€ : ë‚´ë¶€ì ìœ¼ë¡œ ë°ì´í„°ê°€ ë³€ê²½ë˜ëŠ”ê²ƒì„ ê°ì§€í•˜ê¸° ë•Œë¬¸ì´ë©° ê²‰í•¥ê¸° ì‹ìœ¼ë¡œ ë¹„êµí•  ìˆ˜ ìˆì–´ ì¢‹ì€ ì„±ëŠ¥ì„ ìœ ì§€í•  ìˆ˜ ìˆë‹¤.)
    const newState = {...currentState};

    if(action.type === "PLUS"){
        newStore.number++; //ì¦ê°€ëœ ê°’ì´ return ë¨.
    }

    return newState;

}

//createStoreëŠ” ìŠ¤í† ì–´ë¥¼ ë§Œë“¤ì–´ì£¼ëŠ” í•¨ìˆ˜
//âœ…store ì§€ì •í•˜ì—¬ Provider propsë¡œ ë„£ì–´ì¤Œ.
const store = createStore(reducer);

//App ì»´í¬ë„ŒíŠ¸
export default function App() {


    return (
        <div>
            <h1>Root</h1>
            <div
